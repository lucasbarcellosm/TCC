@{
    ViewData["Title"] = "AppCoronavirus - Por Lucas Barcellos";
}

<form class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Logomarca -->
        <div class="fadeIn first">
            <img src="~/images/covid.jpg" class="img-responsive" alt="Imagem Responsiva">
        </div>
        <!-- Usuário e Senha -->
        <div class=" fadeIn first">
            <input type="text" id="inputCPF" class="form-control" placeholder="CPF (apenas os números)"> <br />
            <input type="password" id="inputPassword" class="form-control" placeholder="Password">
        </div>
        <!-- Armazenar login -->
        <div class="checkbox mb-3 fadeIn second">
            <label>
                <input type="checkbox" value="remember-me"> Lembrar dados
            </label>
        </div>
        <!-- Usuário e Senha -->
        <div class="fadeIn third">
            <button asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-lg btn-primary btn-block" type="submit">Acessar</button>
            <br />
        </div>
        <!-- Criar novo usuário -->
        <div id="formFooter" class="fadeIn fourth">
            <a class="underlineHover" href="#">Criar um novo usuário??</a>
        </div>
    </div>
</form>

